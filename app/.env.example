
# CONFIGURACIÓN DE BASE DE DATOS
# Para desarrollo local usa SQLite o PostgreSQL local
# Para producción usa PostgreSQL en la nube
DATABASE_URL="postgresql://username:password@localhost:5432/sgn_rrhh_app"

# CONFIGURACIÓN DE AUTENTICACIÓN
# CRÍTICO: Cambiar en producción
NEXTAUTH_SECRET="tu-clave-secreta-super-segura-para-produccion"
NEXTAUTH_URL="http://localhost:3000"

# CONFIGURACIÓN DE EMAIL (Opcional pero recomendado)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="tu-email@gmail.com"
SMTP_PASS="tu-app-password-de-gmail"

# CONFIGURACIÓN DE GOOGLE CALENDAR (Opcional)
GOOGLE_CLIENT_ID="tu-google-client-id"
GOOGLE_CLIENT_SECRET="tu-google-client-secret"
GOOGLE_REFRESH_TOKEN="tu-refresh-token"
GOOGLE_CALENDAR_ID="tu-calendar-id"

# CONFIGURACIÓN DE ENTORNO
NODE_ENV="development"
# En producción cambiar a: NODE_ENV="production"

# CONFIGURACIÓN DE ARCHIVOS SUBIDOS
UPLOAD_DIR="uploads"
MAX_FILE_SIZE="5242880"  # 5MB en bytes
